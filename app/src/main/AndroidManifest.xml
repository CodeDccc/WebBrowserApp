                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <!-- Include the host attribute if you want your app to respondonly to URLs for a specific domain. -->
                <data android:scheme="http" android:host="www.temple.edu" />
                <data android:scheme="https" android:host="www.temple.edu"/>
                <data android:scheme="http"/>
               <data android:scheme="https"/>
                <category android:name="android.intent.category.DEFAULT" />
                <!-- The BROWSABLE category is required to get links from webpages. -->
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
